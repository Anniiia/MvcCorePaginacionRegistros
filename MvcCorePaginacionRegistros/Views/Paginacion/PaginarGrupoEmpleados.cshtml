@model List<Empleado>

@{
    ViewData["Title"] = "PaginarGrupoEmpleados";
}
@{
    int numeroRegistros = (int)ViewData["REGISTROS"];
    int numeroPagina = 1;
}

<h1>PaginarGrupoEmpleados</h1>


<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroRegistros; i += 2)
    {
        <li class="list-group-item list-group-item-success">

            <a asp-controller="Paginacion" asp-action="PaginarGrupoEmpleados" asp-route-posicion="@i">Pagina @numeroPagina |</a>
        </li>
        numeroPagina += 1;
    }
</ul>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-warning">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                NOMBRE
            </th>
            <th>
                OFICIO
            </th>
            <th>
                SALARIO
            </th>
            <th>
                ID DPTO.
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmpleado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oficio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDepartamento)
                </td>
            </tr>
        }
    </tbody>
</table>
